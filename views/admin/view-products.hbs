<section>
  <div class="container">
    <div class="add d-flex justify-content-end mt-3">
      <a href="/admin/add-product" class="btn btn-success ms-auto">Add Product</a>
    </div>
    <table class="table table-striped mt-4">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Price</th>
          <th scope="col">Processor</th>
          <th scope="col">Image</th>
          <th scope="col">Option</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
        <tr>
          <td>{{this.Name}}</td>
          <td>{{this.Price}}</td>
          <td>{{this.Processor}}</td>
          <td><img style="width:50px; height: 50px;" src="/product-images/{{this._id}}.jpg" alt=""></td>
          <td>
            {{!-- <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a> --}}
            <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"
            onclick="return confirm('Are you want to delete {{this.Name}}')">Delete</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>